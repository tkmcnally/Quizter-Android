<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Create new question"
            android:id="@+id/create_new_question"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_below="@+id/create_new_question"
            android:id="@+id/create_from_existing"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_below="@+id/create_from_existing"
            android:id="@+id/create_your_own"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create_new_question"
            android:id="@+id/question_option_container">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modify existing question"
            android:visibility="visible"
            android:id="@+id/modify_existing_question"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>