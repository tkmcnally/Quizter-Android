
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerRegisterActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavDrawerActivity"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical"
    android:visibility="visible"
    android:background="@color/quizter_theme_background">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <it.gmariotti.cardslib.library.view.CardListView
            android:id="@+id/questionListView"
            card:list_card_layout_resourceID="@layout/profile_list_card_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:smoothScrollbar="true"
            android:clickable="true"
            android:layout_weight="3"
            android:layout_gravity="top"
            android:gravity="top"
            android:paddingTop="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@color/quizter_theme_color"
            android:layout_weight="0">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/saveProfileButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="?android:attr/borderlessButtonStyle"/>
                    <TextView
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:gravity="center"
                         android:text="Save Profile"
                         android:textSize="20sp"
                         android:textColor="@color/quizter_theme_background"/>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

