<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#21824A" />
            <gradient android:angle="-90" android:startColor="#21824A" android:endColor="#21824A"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#21824A" />
            <solid android:color="#21824A"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/quizter_theme_color" />
            <gradient android:angle="-90" android:startColor="@color/quizter_theme_color" android:endColor="@color/quizter_theme_color" />
        </shape>
    </item>
</selector>