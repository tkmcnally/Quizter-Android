<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
        <corners android:radius="1dip" android:bottomLeftRadius="3dip" android:topLeftRadius="3dip" android:topRightRadius="0dp" android:bottomRightRadius="0dp"/>
        <stroke android:width="1dip" android:color="#16a085" />
        <gradient android:angle="-90" android:startColor="#16a085" android:endColor="#16a085"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="1dip" android:bottomLeftRadius="3dip" android:topLeftRadius="3dip" android:topRightRadius="0dp" android:bottomRightRadius="0dp"/>
        <stroke android:width="1dip" android:color="#16a085" />
        <solid android:color="#16a085"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners android:radius="1dip" android:bottomLeftRadius="3dip" android:topLeftRadius="3dip" android:topRightRadius="0dp" android:bottomRightRadius="0dp"/>
        <stroke android:width="1dip" android:color="@color/quizter_theme_color" />
        <gradient android:angle="-90" android:startColor="@color/quizter_theme_color" android:endColor="@color/quizter_theme_color" />
    </shape>
</item>
</selector>