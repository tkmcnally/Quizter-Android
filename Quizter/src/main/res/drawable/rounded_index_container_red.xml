<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" android:bottomLeftRadius="3dip" android:topLeftRadius="3dip" android:topRightRadius="0dp" android:bottomRightRadius="0dp"/>
            <stroke android:width="1dip" android:color="#EB212E" />
            <gradient android:angle="-90" android:startColor="#EB212E" android:endColor="#EB212E"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" android:bottomLeftRadius="3dip" android:topLeftRadius="3dip" android:topRightRadius="0dp" android:bottomRightRadius="0dp"/>
            <stroke android:width="1dip" android:color="#EB212E" />
            <solid android:color="#EB212E"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" android:bottomLeftRadius="3dip" android:topLeftRadius="3dip" android:topRightRadius="0dp" android:bottomRightRadius="0dp"/>
            <stroke android:width="1dip" android:color="#EB212E" />
            <gradient android:angle="-90" android:startColor="#EB212E" android:endColor="#EB212E" />
        </shape>
    </item>
</selector>